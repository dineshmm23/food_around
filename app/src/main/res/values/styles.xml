<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar" parent="@style/AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="@style/ThemeOverlay.AppCompat.Light" />

    <style name="BB_BottomBarBadge_Text" parent="@style/TextAppearance.AppCompat.Body2">
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="BB_BottomBarItem">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/bb_height</item>
    </style>

    <style name="BB_BottomBarItem_Fixed.TitleAppearance" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14.0sp</item>
    </style>

    <style name="BB_BottomBarItem_Shifting.TitleAppearance" parent="@style/BB_BottomBarItem_Fixed.TitleAppearance">
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="BB_BottomBarItem_Tablet">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BB_BottomBarItem_TitleStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ToolBarStyle.Base" parent="">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="contentInsetStart">-10.0dip</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ToolBarStyle.Event" parent="@style/ToolBarStyle">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.AppCompat.Toolbar.Title</item>
    </style>

    <style name="ToolBarStyle" parent="@style/ToolBarStyle.Base" />

    <style name="MyEditTextTheme">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorControlNormal">#ffffffff</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:paddingStart">0.0dip</item>
    </style>

    <style name="MyTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyThemeWithNoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:textAppearance">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="colorAccent">@color/colorPrimaryText</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorControlNormal">#ffc5c5c5</item>
        <item name="colorPrimary">@color/colorPrimaryText</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:listPreferredItemHeightSmall">@dimen/_40sdp</item>
    </style>

    <style name="StripeDefaultTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorSecondary">@android:color/secondary_text_light</item>
        <item name="colorAccent">@color/accent_color_default</item>
        <item name="colorControlNormal">@color/control_normal_color_default</item>
        <item name="colorPrimary">@color/toolbar_color_default</item>
        <item name="titleTextColor">@android:color/white</item>
    </style>

    <style name="StripeErrorTextStyle">
        <item name="android:textSize">@dimen/notification_text_size</item>
        <item name="android:textColor">#ff999999</item>
    </style>

    <style name="StripeToolBarStyle" parent="@style/ThemeOverlay.AppCompat">
        <item name="colorControlNormal">?titleTextColor</item>
    </style>


    <style name="TextAppearance.Design.CollapsingToolbar.Expanded.Shadow" parent="@style/TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">8.0</item>
    </style>
</resources>
